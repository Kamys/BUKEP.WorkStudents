<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardLesson"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    cardview:cardElevation="4dp"
    cardview:cardCornerRadius="10dp">
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="10:15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:id="@+id/timeStartLesson"
            android:layout_marginTop="3.0dp"
            android:layout_marginLeft="5.0dp" />
        <TextView
            android:text="2 пара"
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_below="@+id/timeStartLesson"
            android:layout_alignRight="@id/timeStartLesson"
            android:layout_alignLeft="@id/timeStartLesson"
            android:maxHeight="25dp" />
        <TextView
            android:text="11:50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/number"
            android:id="@+id/timeEndLesson"
            android:layout_alignLeft="@id/timeStartLesson" />
        <ImageView
            android:src="@drawable/green_line"
            android:id="@+id/imageSeparator"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/number"
            android:layout_alignTop="@id/timeStartLesson"
            android:layout_alignBottom="@id/timeEndLesson"
            android:layout_marginLeft="1.0dp"
            android:layout_marginBottom="2.0dp" />
        <TextView
            android:id="@+id/typeLesson"
            android:text="Лекция"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_toRightOf="@id/imageSeparator"
            android:layout_alignTop="@id/imageSeparator" />
        <TextView
            android:text="Менеджмент"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameLesson"
            android:layout_below="@id/typeLesson"
            android:layout_toRightOf="@id/imageSeparator" />
        <ImageView
            android:id="@+id/imageTeacher"
            android:src="@drawable/teacher"
            android:layout_width="10.0dp"
            android:layout_height="10.0dp"
            android:layout_below="@id/nameLesson"
            android:layout_toRightOf="@id/imageSeparator" />
        <ImageView
            android:id="@+id/imageLocation"
            android:src="@drawable/gps"
            android:layout_width="10.0dp"
            android:layout_height="10.0dp"
            android:layout_below="@id/imageTeacher"
            android:layout_toRightOf="@id/imageSeparator"
            android:layout_alignRight="@id/imageTeacher"
            android:layout_marginTop="5.0dp" />
        <TextView
            android:text="Иванов Иван Иванович"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameTeacher"
            android:textSize="10sp"
            android:layout_toRightOf="@id/imageTeacher"
            android:layout_below="@id/nameLesson"
            android:layout_marginLeft="5.0dp" />
        <TextView
            android:id="@+id/nameAudience"
            android:text="Аудитория 406"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_toRightOf="@id/imageLocation"
            android:layout_below="@id/nameTeacher"
            android:layout_marginLeft="5.0dp"
            android:layout_alignTop="@id/imageLocation" />
    </RelativeLayout>
</android.support.v7.widget.CardView>